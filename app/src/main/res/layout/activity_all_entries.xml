<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E1E1E"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1E1E1E">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="All Entries"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </com.google.android.material.appbar.MaterialToolbar>

        <!-- Search Bar -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/search_background"
            app:iconifiedByDefault="false"
            app:queryHint="Search entries..."
            app:searchHintIcon="@null"
            app:searchIcon="@drawable/ic_search"
            app:closeIcon="@drawable/ic_close"
            app:queryBackground="@android:color/transparent" />

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingHorizontal="12dp"
            android:paddingBottom="8dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_has_photo"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· Has Photo"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/chip_filter_state"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_has_voice"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¤ Has Voice"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/chip_filter_state"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_1"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜¢ Very Bad"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/chip_filter_state"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_2"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜• Bad"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/chip_filter_state"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_3"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜ Normal"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/chip_filter_state"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_4"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ™‚ Good"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/chip_filter_state"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_5"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜„ Very Good"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="@color/chip_filter_state"
                    app:checkedIconTint="@android:color/white" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Active Filters Summary -->
        <TextView
            android:id="@+id/filter_summary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No entries yet.\nStart tracking your mood!"
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="16sp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/entries_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:padding="16dp" />

        </FrameLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
